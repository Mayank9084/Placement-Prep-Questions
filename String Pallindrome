#include <stdio.h>
#include <string.h>

int main()
{
    char s[100];
    int i,n,c=0;
    clrscr();
    printf("Enter the string : ");
    gets(s);
    n=strlen(s);
    for(i=0;i<n/2;i++)
    {
     if(s[i]==s[n-i-1])
      c++;
      }
      if(c==i)
      {
      printf("String is pallindrome");
      }
       else
       {
	printf("String is not pallindrome");
	}
	getch();
	return 0;
	}

OUTPUTS :

Enter the string : mayam
String is pallindrome
